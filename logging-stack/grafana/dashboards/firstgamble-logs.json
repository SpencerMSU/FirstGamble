{
  "id": null,
  "title": "FirstGamble Logs",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "logs",
      "title": "Логи по сервису",
      "gridPos": {"h": 12, "w": 24, "x": 0, "y": 0},
      "options": {
        "dedupStrategy": "none",
        "enableLogDetails": true,
        "prettifyLogMessage": true,
        "showCommonLabels": true,
        "showLabels": true,
        "showTime": true,
        "sortOrder": "Descending",
        "wrapLogMessage": true
      },
      "targets": [
        {
          "expr": "{job=\"firstgamble\"}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "table",
      "title": "Начисления очков",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 12},
      "options": {
        "showHeader": true,
        "sortBy": [
          {"desc": true, "displayName": "Time"}
        ],
        "footer": {"enablePagination": true}
      },
      "transformations": [
        {
          "id": "extractFields",
          "options": {
            "source": "message",
            "format": "regex",
            "regex": "Игрок с id (?<user_id>\\d+) получил (?<points>\\d+) очков в игре (?<game>[a-zA-Z0-9_\\-]+)"
          }
        }
      ],
      "targets": [
        {
          "expr": "{job=\"firstgamble\"} |= \"Игрок с id\"",
          "refId": "A"
        }
      ]
    }
  ]
}
